<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#FFF7ED"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:clipToOutline="true"
    android:layout_marginHorizontal="4dp"
    android:backgroundTintMode="src_in"
    android:backgroundTint="#FFF7ED">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_circle"
        android:tint="#F97316" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Gala Dinner"
            android:textStyle="bold"
            android:textColor="#7C2D12"
            android:textSize="14sp"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <TextView
            android:text="Celebrate with all finalists"
            android:textSize="13sp"
            android:textColor="#EA580C"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>
    </LinearLayout>
</LinearLayout>
