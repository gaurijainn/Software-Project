<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <!-- TOP APP BAR -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        style="@style/Widget.Material3.Toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2563EB"
        android:title="Hackathon 2026"
        android:subtitle="NIT Silchar"
        android:titleTextColor="@android:color/white"
        android:subtitleTextColor="@android:color/white"
        app:menu="@menu/top_app_bar_menu" />

    <!-- MAIN SCROLL CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerPadding="8dp">

            <!-- Header -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">

                <TextView
                    android:text="Competition Timeline"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#111827"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                <TextView
                    android:text="Three rounds to showcase your skills"
                    android:textSize="14sp"
                    android:textColor="#6B7280"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            </LinearLayout>

            <!-- ROUND 1 CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#3B82F6"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Online"
                        android:padding="4dp"
                        android:textSize="12sp"
                        android:textColor="#1E3A8A"
                        android:background="#DBEAFE"
                        android:layout_gravity="start"
                        android:layout_marginBottom="6dp"
                        android:backgroundTintMode="src_in"
                        android:fontFamily="sans-serif-medium"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView
                        android:text="Round 1: Screening"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111827"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView
                        android:text="January 2026 (Second Week)"
                        android:textSize="13sp"
                        android:textColor="#6B7280"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView
                        android:text="MCQs, aptitude, and basic coding questions to test fundamental knowledge."
                        android:textSize="14sp"
                        android:textColor="#374151"
                        android:layout_marginTop="8dp"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="âœ“ Online examination mode"
                            android:textSize="14sp"
                            android:textColor="#15803D"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                        <TextView
                            android:text="âœ“ Top 50% or Top 75% advance"
                            android:textSize="14sp"
                            android:textColor="#15803D"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                        <TextView
                            android:text="â± Duration: 30 minutes"
                            android:textSize="14sp"
                            android:textColor="#6B7280"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ROUND 2 CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeColor="#22C55E"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Online"
                        android:padding="4dp"
                        android:textSize="12sp"
                        android:textColor="#065F46"
                        android:background="#DCFCE7"
                        android:layout_gravity="start"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="sans-serif-medium"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView
                        android:text="Round 2: Coding Challenge"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111827"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView
                        android:text="February 2026 (First Week)"
                        android:textSize="13sp"
                        android:textColor="#6B7280"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView
                        android:text="Advanced coding problems and AI/ML application challenges."
                        android:textSize="14sp"
                        android:textColor="#374151"
                        android:layout_marginTop="8dp"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="âœ“ Problem-solving focus"
                            android:textSize="14sp"
                            android:textColor="#15803D"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                        <TextView
                            android:text="âœ“ Top teams qualify for finals"
                            android:textSize="14sp"
                            android:textColor="#15803D"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                        <TextView
                            android:text="â± Duration: 1 hour"
                            android:textSize="14sp"
                            android:textColor="#6B7280"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ROUND 3 CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:strokeColor="#A855F7"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Offline - Grand Finale"
                        android:padding="4dp"
                        android:textSize="12sp"
                        android:textColor="#6B21A8"
                        android:background="#F3E8FF"
                        android:layout_gravity="start"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="sans-serif-medium"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView
                        android:text="Round 3: Final Hackathon"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111827"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView
                        android:text="February 2026 (Last Week)"
                        android:textSize="13sp"
                        android:textColor="#6B7280"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <TextView
                        android:text="Real-time problem-solving at NIT Silchar campus."
                        android:textSize="14sp"
                        android:textColor="#374151"
                        android:layout_marginTop="8dp"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="ðŸ“ NIT Silchar, Assam"
                            android:textSize="14sp"
                            android:textColor="#7E22CE"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                        <TextView
                            android:text="âœ“ Free accommodation provided"
                            android:textSize="14sp"
                            android:textColor="#15803D"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                        <TextView
                            android:text="âœ“ Local tours and gala dinner"
                            android:textSize="14sp"
                            android:textColor="#15803D"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                        <TextView
                            android:text="â± Duration: 24 hours"
                            android:textSize="14sp"
                            android:textColor="#6B7280"
                            android:layout_marginBottom="12dp"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:text="View Final Round Details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cornerRadius="12dp"
                        android:textStyle="bold"
                        android:backgroundTint="#9333EA"
                        android:textColor="@android:color/white" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- FINAL ROUND BENEFITS -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Final Round Benefits"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#111827"
                        android:layout_marginBottom="8dp"  android:layout_height="wrap_content" android:layout_width="wrap_content"/>

                    <!-- Benefit items -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:dividerPadding="8dp">

                        <include layout="@layout/item_benefit_blue" />
                        <include layout="@layout/item_benefit_green" />
                        <include layout="@layout/item_benefit_purple" />
                        <include layout="@layout/item_benefit_orange" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAVIGATION -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_icon_tint"
        app:itemTextColor="@color/nav_icon_tint" />

</LinearLayout>
