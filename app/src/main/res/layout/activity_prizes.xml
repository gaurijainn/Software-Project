<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    tools:context=".PrizesActivity">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_gradient_blue">

        <TextView
            android:layout_marginTop="18dp"
            android:text="Hackathon 2026"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="NIT Silchar"
            android:textColor="#DDE1FF"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Section Title -->
            <TextView
                android:text="Prizes and Recognition"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Total prize pool of ₹1,20,000"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <!-- 1st Place Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF8E1"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:layout_marginTop="4dp"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_trophy1"
                    android:tint="#F9A825"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="1st Place"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <TextView
                        android:text="₹ 50,000\n+ Certificate of Achievement"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 2nd Place Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ECEFF1"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:elevation="3dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_trophy1"
                    android:tint="#757575"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="2nd Place"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="₹ 40,000\n+ Certificate of Achievement"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 3rd Place Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF8E1"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:layout_marginTop="4dp"
                android:clipToOutline="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_trophy1"
                    android:tint="#F9A825"
                    android:layout_marginEnd="12dp"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="3rd Place"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>

                    <TextView
                        android:text="₹ 30,000\n+ Certificate of Achievement"
                        android:textSize="14sp"
                        android:textColor="#444444"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Certificates Section -->
            <!-- Certificates Section Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_certificate_box"
                android:padding="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <!-- Title row with small badge on the left -->
                <LinearLayout
                    android:layout_marginLeft="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"

                        android:src="@drawable/ic_badge"
                        android:tint="@android:color/black"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/titleCertificates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Certificates for All"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <!-- Participation Certificate -->
                <!-- Outstanding Performance (XML-only: bold title + normal description) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">

                    <!-- bullet -->
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bullet_circle"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="12dp" />

                    <!-- text column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvOutstandingTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Participation certificate"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvOutstandingDesc1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For all registered participants"
                            android:textSize="15sp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>


                <!-- Appreciation Certificate -->
                <!-- Outstanding Performance (XML-only: bold title + normal description) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">

                    <!-- bullet -->
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bullet_circle"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="12dp" />

                    <!-- text column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvOutstandingTitle2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appreciation certificate"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvOutstandingDesc2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For participants securing ≥50% or ranking in top 75%"
                            android:textSize="15sp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>


                <!-- Outstanding Performance -->
                <!-- Outstanding Performance (XML-only: bold title + normal description) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="6dp">

                    <!-- bullet -->
                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/bullet_circle"
                        android:layout_marginTop="6dp"
                        android:layout_marginEnd="12dp" />

                    <!-- text column -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvOutstandingTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Outstanding Performance"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@android:color/black" />

                        <TextView
                            android:id="@+id/tvOutstandingDesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For top 10% participants (scoring ≥80%)"
                            android:textSize="15sp"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
                <TextView
                    android:layout_marginBottom="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="From our previous hackathon"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />



                <ImageView
                    android:layout_marginTop="-20dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginBottom="40dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hack1" />





        </LinearLayout>
    </ScrollView>

</LinearLayout>
