<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <!-- Centered Card -->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/rounded_white"
        android:elevation="6dp"
        android:layout_gravity="center">   <!-- THIS ENSURES CENTER POSITION -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Test Passcode"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your unique passcode to begin the screening test"
            android:textColor="#666"
            android:layout_marginBottom="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passcode"
            android:layout_marginBottom="5dp" />

        <EditText
            android:id="@+id/passcodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your passcode"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/passcodeError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D32F2F"
            android:visibility="gone"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Demo passcode: HACK2026"
            android:textColor="#333"
            android:background="#eef2ff"
            android:padding="10dp"
            android:layout_marginTop="15dp" />

        <Button
            android:id="@+id/startTestBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Test"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</FrameLayout>
