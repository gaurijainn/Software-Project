<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Header with timer badge -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:id="@+id/testTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Screening Test - Round 1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/testSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete all questions before time runs out"
                android:textColor="#666"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/timerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/badge_timer"
            android:textColor="#ffffff"
            android:text="29:58"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Progress info -->
    <TextView
        android:id="@+id/progressInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Questions Answered: 0/4"
        android:textColor="#374151"
        android:layout_marginTop="14dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:progress="0"
        android:max="100"
        android:layout_marginTop="6dp"
        android:indeterminate="false" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <!-- MCQ Section Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multiple Choice Questions"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- MCQs container: will be populated from Kotlin -->
    <LinearLayout
        android:id="@+id/mcqContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <!-- Coding Problem Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coding Problem"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/codingProblemCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_green"
        android:padding="12dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/codingTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Sum Problem"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/codingDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Given an array of integers nums and an integer target, return indices of the two numbers such that they add up to target. You may assume that each input would have exactly one solution, and you may not use the same element twice."
            android:textColor="#555"
            android:layout_marginTop="8dp"/>

        <TextView
            android:text="Input Format"
            android:textStyle="bold"
            android:layout_marginTop="10dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/inputFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First line contains n (number of elements) and target.\nSecond line contains n space-separated integers."
            android:textColor="#2b6cb0"
            android:layout_marginTop="4dp" />

        <TextView
            android:text="Output Format"
            android:textStyle="bold"
            android:layout_marginTop="10dp" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <TextView
            android:id="@+id/outputFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Two space-separated integers representing the indices."
            android:textColor="#2f855a"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/uploadFileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose file"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/uploadedFileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#2f855a"
            android:layout_marginTop="6dp"
            android:visibility="gone"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp" />

    <Button
        android:id="@+id/submitTestBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit Test"
        android:layout_marginTop="8dp"/>
</LinearLayout>
