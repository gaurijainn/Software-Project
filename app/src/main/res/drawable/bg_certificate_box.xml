<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Background color -->
    <solid android:color="#FFFFFF" />

    <!-- Border line -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Slight shadow padding look -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
